FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Agent Zero dependencies
RUN pip install --no-cache-dir \
    agent-zero \
    openai \
    anthropic \
    httpx \
    asyncio \
    structlog

# Copy agent code
COPY . .

# Expose port
EXPOSE 5000

# Run Agent Zero
CMD ["python", "orchestrator.py"]
