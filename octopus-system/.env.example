# Octopus Architecture - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=Octopus Architecture
VERSION=1.0.0
ENVIRONMENT=development  # development | staging | production

# ============================================================================
# CITY CONFIGURATION (Seattle P0)
# ============================================================================
CITY_NAME=Seattle
CITY_SLUG=sea
CITY_TIMEZONE=America/Los_Angeles
GEOGRAPHIC_CENTER=47.6062,-122.3321
GEOGRAPHIC_RADIUS_KM=80

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-secret-key-here-min-32-characters-long
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://octopus-sea.com
ALLOWED_HOSTS=localhost,octopus-sea.com

# ============================================================================
# DATABASE (SUPABASE)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/octopus

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# AI / AGENT APIS
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================================================
# OPENHANDS
# ============================================================================
OPENHANDS_API_URL=http://localhost:3001
OPENHANDS_API_KEY=your-openhands-key-here

# ============================================================================
# AGENT ZERO
# ============================================================================
AGENT_ZERO_URL=http://localhost:5000

# ============================================================================
# FIRECRAWL (Business Verification)
# ============================================================================
FIRECRAWL_API_KEY=your-firecrawl-key-here

# ============================================================================
# DOCUSEAL (E-Signature)
# ============================================================================
DOCUSEAL_API_URL=http://localhost:3003
DOCUSEAL_API_KEY=your-docuseal-key-here
DOCUSEAL_SECRET_KEY=your-docuseal-secret-here

# ============================================================================
# POSTIZ (Social Distribution)
# ============================================================================
POSTIZ_API_URL=http://localhost:5001
POSTIZ_API_KEY=your-postiz-key-here

# ============================================================================
# TRUST & VERIFICATION
# ============================================================================
TRUST_SCORE_MIN=60
TRUST_SCORE_MAX=100
MANUAL_REVIEW_THRESHOLD=70

# ============================================================================
# LEAD ATTRIBUTION
# ============================================================================
LEAD_URL_EXPIRY_HOURS=72
LEAD_ATTRIBUTION_WINDOW_DAYS=30

# ============================================================================
# REVENUE
# ============================================================================
COMMISSION_RATE_MIN=0.03
COMMISSION_RATE_MAX=0.07
COMMISSION_RATE_DEFAULT=0.05

# ============================================================================
# SOCIAL PURPOSE
# ============================================================================
CONTRIBUTION_REQUIRED=true
CONTRIBUTION_MIN_HOURS_YEAR=12

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# MONITORING (OPTIONAL)
# ============================================================================
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# ============================================================================
# EMAIL (FUTURE)
# ============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
